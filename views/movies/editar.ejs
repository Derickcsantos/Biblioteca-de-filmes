<%- include('../partials/header') %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg border-0 rounded-lg animate__animated animate__fadeIn">
        <div class="card-header bg-warning text-dark">
          <h2 class="mb-0"><i class="fas fa-edit me-2"></i>Editar Filme</h2>
        </div>
        <div class="card-body">
          <form action="/movies/<%= movie._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
            <div class="mb-4">
              <label for="nome" class="form-label fw-bold">Nome*</label>
              <input type="text" class="form-control form-control-lg" id="nome" name="nome" value="<%= movie.nome %>" required>
              <div class="invalid-feedback">Por favor, insira o nome do filme.</div>
            </div>

            <div class="mb-4">
              <label for="titulo" class="form-label fw-bold">Título*</label>
              <input type="text" class="form-control form-control-lg" id="titulo" name="titulo" value="<%= movie.titulo %>" required>
              <div class="invalid-feedback">Por favor, insira o título do filme.</div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-4">
                <label for="duracao" class="form-label fw-bold">Duração*</label>
                <input type="text" class="form-control form-control-lg" id="duracao" name="duracao" value="<%= movie.duracao %>" required>
                <div class="invalid-feedback">Por favor, insira a duração do filme.</div>
              </div>

              <div class="col-md-6 mb-4">
                <label for="genero" class="form-label fw-bold">Gênero*</label>
                <input type="text" class="form-control form-control-lg" id="genero" name="genero" value="<%= movie.genero %>" required>
                <div class="invalid-feedback">Por favor, insira o gênero do filme.</div>
              </div>
            </div>

            <div class="mb-4">
              <label for="diretor" class="form-label fw-bold">Diretor*</label>
              <input type="text" class="form-control form-control-lg" id="diretor" name="diretor" value="<%= movie.diretor %>" required>
              <div class="invalid-feedback">Por favor, insira o diretor do filme.</div>
            </div>

            <div class="mb-4">
              <label for="capa" class="form-label fw-bold">URL da Capa</label>
              <input type="text" class="form-control form-control-lg" id="capa" name="capa" value="<%= movie.capa %>">
              <% if (movie.capa) { %>
                <div class="mt-2 text-center">
                  <img src="<%= movie.capa %>" alt="Capa atual" class="img-thumbnail" style="max-height: 200px;">
                </div>
              <% } %>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
              <button type="submit" class="btn btn-warning btn-lg px-4 me-md-2">
                <i class="fas fa-save me-1"></i> Salvar Alterações
              </button>
              <a href="/movies" class="btn btn-outline-secondary btn-lg px-4">
                <i class="fas fa-times me-1"></i> Cancelar
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script>
  // Form validation
  (function() {
    'use strict'
    const forms = document.querySelectorAll('.needs-validation')
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>
</body>
</html>